<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.DesignStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#ff1d3e</item>
        <item name="colorPrimaryDark">#dd1632</item>
        <item name="colorAccent">#ff1d3e</item>
    </style>

    <style name="TabLayoutStyle" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="tabSelectedTextColor">#000</item>
        <item name="tabTextColor">#fff</item>
        <item name="tabIndicatorColor">#fff</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ActionBarStyle</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="ActionBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlHighlight">#8fff</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>


    <style name="ToolBarStyle" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/ActionBarStyle</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:elevation" tools:ignore="NewApi">0dp</item>
        <item name="layout_collapseMode">pin</item>
    </style>

    <style name="AppBarLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="CollapsingToolbarLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
        <item name="expandedTitleMarginTop">90dp</item>
        <item name="expandedTitleGravity">center</item>
        <item name="expandedTitleTextAppearance">@style/TextStyle</item>
        <item name="contentScrim">?attr/colorPrimary</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="collapsedTitleGravity">center</item>
        <item name="collapsedTitleTextAppearance">@style/Text1Style</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text1Style">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
